<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/bg_fragment_launcher"
    android:backgroundTint="@android:color/white"
    android:clickable="true"
    android:elevation="@dimen/_1sdp"
    android:focusable="true"
    android:foreground="@drawable/foreground_ripple_effect"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/widget_preview"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/widget_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:ellipsize="end"
            android:fontFamily="@font/arimo_bold_font"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/widget_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimo_regular_font"
            android:text="2x2"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/_8ssp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/action_icon"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="end"
        android:clickable="true"
        android:contentDescription="Add or Remove"
        android:focusable="true"
        android:foreground="@drawable/foreground_ripple_effect"
        android:src="@drawable/ic_add_circle"
        android:tint="@color/colorPrimary" />

</LinearLayout>