<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_item_layout"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/foreground_ripple_effect"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/selection_indicator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:adjustViewBounds="true"
        android:background="?attr/colorPrimary"
        android:src="@drawable/ic_pointer"
        android:visibility="invisible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        tools:src="@drawable/ic_personalization"

        tools:tint="?attr/colorPrimary" />

    <TextView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:fontFamily="@font/arimo_regular_font"


        android:textColor="@android:color/black"
        android:textSize="@dimen/_11ssp"
        tools:text="Personalization" />

</LinearLayout>