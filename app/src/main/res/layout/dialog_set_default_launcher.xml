<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_270sdp"
    android:layout_gravity="center"
    android:background="@drawable/bg_fragment_launcher"
    android:elevation="@dimen/_1sdp"
    android:gravity="center"
    android:orientation="vertical"

    android:padding="@dimen/_10sdp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fontFamily="@font/font_semibold"
        android:gravity="center"
        android:text="Set as Default Launcher"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_16sdp" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"


        android:text="To use this app as your home screen, please set it as the default launcher in the next step"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"

        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_later"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_1sdp"
            android:layout_marginVertical="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_fragment_launcher"
            android:backgroundTint="#EFEFEF"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/foreground_ripple_effect"
            android:paddingHorizontal="@dimen/_5sdp"
            android:text="Later"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12ssp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_go_to_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_fragment_launcher"
            android:backgroundTint="@color/colorPrimary"
            android:clickable="true"
            android:elevation="@dimen/_1sdp"
            android:focusable="true"
            android:foreground="@drawable/foreground_ripple_effect"
            android:paddingHorizontal="@dimen/_5sdp"
            android:text="Set as Default"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>

</LinearLayout>