<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5sdp"
    android:background="@drawable/notification_item_background1"
    android:clickable="true"
    android:elevation="@dimen/_1sdp"
    android:focusable="true"
    android:foreground="@drawable/foreground_ripple_effect"
    android:orientation="horizontal"
    android:padding="@dimen/_10sdp">


    <androidx.cardview.widget.CardView
        android:id="@+id/preview_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical"
        app:cardCornerRadius="@dimen/_10sdp"

        app:cardElevation="@dimen/_1sdp">


        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimo_bold_font"


            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/notification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:textColor="#3C4043" />
    </LinearLayout>

    <ImageView
        android:id="@+id/notification_expand"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/foreground_ripple_effect"
        android:padding="@dimen/_3sdp"
        android:rotation="90"
        android:src="@drawable/ic_arrow_up"
        android:tint="@color/black" />
</LinearLayout>