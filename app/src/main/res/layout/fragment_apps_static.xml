<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/arimo_bold_font"


            android:text="Apps"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp" />


        <LinearLayout
            android:id="@+id/setting_recent_apps_layout"
            style="@style/SettingsRowStyle"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_recent_apps"
                style="@style/SettingsIconStyle"
                android:src="@drawable/ic_recent_apps" />

            <TextView
                style="@style/SettingsTextStyle"
                android:layout_toEndOf="@id/icon_recent_apps"
                android:layout_weight="1"
                android:fontFamily="@font/arimo_regular_font"
                android:text="Show Recent Apps" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/setting_recent_apps_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon_recent_apps"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"

                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/foreground_ripple_effect"
                app:thumbTint="@color/switch_thumb_selector"
                app:trackTint="@color/switch_track_selector" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/setting_new_shortcut_layout"
            style="@style/SettingsRowStyle"
            android:visibility="gone">

            <ImageView
                android:id="@+id/icon_new_shortcut"
                style="@style/SettingsIconStyle"
                android:src="@drawable/ic_add_shortcut" />

            <TextView
                style="@style/SettingsTextStyle"
                android:layout_toEndOf="@id/icon_new_shortcut"
                android:text="Create Newly Installed App Shortcut" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/setting_new_shortcut_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>