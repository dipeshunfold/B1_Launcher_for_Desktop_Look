<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Notifications Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/content_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1"

            app:cardCornerRadius="@dimen/_15sdp"
            app:cardElevation="@dimen/_2sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/blur_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="invisible"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Rounded" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/glass_edge_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:background="#4DF1F3F4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Notification"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/btn_clear_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clear All"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_5sdp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/notifications_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/tv_no_notifications"
                            style="@style/DayOfWeek"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="No notifications"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="gone"

                            tools:visibility="visible" />
                    </FrameLayout>

                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Quick Settings Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/content_container1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/_15sdp"

            app:cardElevation="@dimen/_2sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/blur_background1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="invisible"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Rounded" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/glass_edge_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#4DF1F3F4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enable Notification"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/toggle_notification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="@dimen/_5sdp" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:paddingBottom="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/_5sdp">

                            <!-- First row of quick settings -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <include
                                    android:id="@+id/btn_airplane"
                                    layout="@layout/quick_settings_button" />

                                <Space
                                    android:layout_width="@dimen/_5sdp"
                                    android:layout_height="match_parent" />

                                <include
                                    android:id="@+id/btn_wifi"
                                    layout="@layout/quick_settings_button" />

                                <Space
                                    android:layout_width="@dimen/_5sdp"
                                    android:layout_height="match_parent" />

                                <include
                                    android:id="@+id/btn_bluetooth"
                                    layout="@layout/quick_settings_button" />

                                <Space
                                    android:layout_width="@dimen/_5sdp"
                                    android:layout_height="match_parent" />

                                <include
                                    android:id="@+id/btn_flashlight"
                                    layout="@layout/quick_settings_button" />
                            </LinearLayout>

                            <!-- Second row of quick settings -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <include
                                    android:id="@+id/btn_auto_brightness"
                                    layout="@layout/quick_settings_button" />

                                <Space
                                    android:layout_width="@dimen/_5sdp"
                                    android:layout_height="match_parent" />

                                <include
                                    android:id="@+id/btn_data"
                                    layout="@layout/quick_settings_button" />

                                <Space
                                    android:layout_width="@dimen/_5sdp"
                                    android:layout_height="match_parent" />

                                <include
                                    android:id="@+id/btn_rotate"
                                    layout="@layout/quick_settings_button" />

                                <Space
                                    android:layout_width="@dimen/_5sdp"
                                    android:layout_height="match_parent" />

                                <include
                                    android:id="@+id/btn_hotspot"
                                    layout="@layout/quick_settings_button" />
                            </LinearLayout>

                            <!-- Third row of quick settings -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <include
                                    android:id="@+id/btn_location"
                                    layout="@layout/quick_settings_button" />

                                <Space
                                    android:layout_width="@dimen/_5sdp"
                                    android:layout_height="match_parent" />

                                <include
                                    android:id="@+id/btn_settings"
                                    layout="@layout/quick_settings_button" />

                                <Space
                                    android:layout_width="@dimen/_5sdp"
                                    android:layout_height="match_parent" />

                                <include
                                    android:id="@+id/btn_sound"
                                    layout="@layout/quick_settings_button" />

                                <Space
                                    android:layout_width="@dimen/_5sdp"
                                    android:layout_height="match_parent" />

                                <include
                                    android:id="@+id/btn_wallpapers"
                                    layout="@layout/quick_settings_button" />
                            </LinearLayout>

                            <!-- Brightness and Volume Controls -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_10sdp">

                                <!-- Brightness Control -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:src="@drawable/ic_brightness" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <SeekBar
                                            android:id="@+id/seekbar_brightness"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_5sdp"
                                            android:layout_weight="1"
                                            android:max="255"
                                            android:maxHeight="5dp"
                                            android:minHeight="5dp"
                                            android:paddingStart="@dimen/_10sdp"
                                            android:paddingEnd="@dimen/_10sdp"
                                            android:progressDrawable="@drawable/custom_volume_track"
                                            android:splitTrack="false"
                                            android:thumb="@drawable/custom_volume_thumb"
                                            android:thumbTint="@null" />

                                    </LinearLayout>

                                </LinearLayout>

                                <!-- Volume Control -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:padding="@dimen/_2sdp"
                                        android:src="@drawable/ic_volume" />

                                    <SeekBar
                                        android:id="@+id/seekbar_volume"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:max="255"
                                        android:maxHeight="5dp"
                                        android:minHeight="5dp"
                                        android:paddingStart="@dimen/_10sdp"
                                        android:paddingEnd="@dimen/_10sdp"
                                        android:progressDrawable="@drawable/custom_volume_track"
                                        android:splitTrack="false"
                                        android:thumb="@drawable/custom_volume_thumb"
                                        android:thumbTint="@null" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>